{{ form_start(form) }}
<div class="form-row">
    <div class="col">
        {{ form_row(form.fullName) }}
    </div>
    <div class="col" lang="fr">
        {{ form_row(form.birthday) }}
    </div>
    <div class="col">
        {{ form_row(form.cin) }}
    </div>
</div>
<div class="form-row">
    <div class="col">
        {{ form_row(form.phone) }}
    </div>
    <div class="col">
        {{ form_row(form.city) }}
    </div>
    <div class="col">
        {{ form_row(form.ord) }}
    </div>
</div>
<div class="form-row">
    <div class="col">
        {{ form_row(form.diplomaAt) }}
    </div>
    <div class="col">
        {{ form_row(form.initMonth) }}
    </div>
    <div class="col">
        {{ form_row(form.initDay) }}
    </div>
</div>
<div class="form-row">
    <div class="col">
        {{ form_row(form.address) }}
    </div>
    <div class="col">
        {{ form_row(form.comment) }}
    </div>
</div>
<hr>
<div class="form-row">
    <div class="col">
        {{ form_row(form.pId) }}
    </div>
    <div class="col">
        {{ form_row(form.bankId) }}
    </div>
</div>

<button class="btn btn-primary"><i class="fas fa-save"></i> {{ button_label|default('تسجيل') }}</button>
{{ form_end(form) }}
