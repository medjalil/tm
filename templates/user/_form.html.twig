{{ form_start(form) }}
<div class="form-row">
    <div class="col">
        {{ form_row(form.fullName) }}
    </div>
    <div class="col">
        {{ form_row(form.email) }}
    </div>
</div>
<div class="form-row">
    <div class="col">
        {{ form_row(form.mobile) }}
    </div>
</div>
<div class="form-row">
    <div class="col-6 {% if app.request.attributes.get('_route') == 'user_edit' %}d-none{% endif %}">
        {{ form_row(form.password) }}
    </div>
    <div class="col-6">
        {{ form_row(form.roles) }}
    </div>
</div>

<button class="btn btn-primary"><i class="fas fa-save"></i> {{ button_label|default('تسجيل') }}</button>
{{ form_end(form) }}
